<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/dm_serif_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Item" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextView.Item.Header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/dm_serif_display</item>
    </style>

    <style name="Button.Retry" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="strokeColor">@color/darkGrey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
    </style>

</resources>